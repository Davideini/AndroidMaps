<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgResButton"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:onClick="showFullscreen"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_report_image"
            android:background="#fff3f3f3"/>

        <TextView
            android:id="@+id/AddresstextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgResButton"
            android:layout_below="@+id/imgResButton"
            android:text="Address:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/AddresstextView"
            android:layout_below="@+id/AddresstextView"
            android:layout_marginTop="5dp"
            android:text="Descripton:"
            android:textSize="20sp"

            />


        <TextView
            android:id="@+id/AddressVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Desc"
            android:layout_toEndOf="@+id/AddresstextView" />

        <TextView
            android:id="@+id/DescVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Desc"
            android:layout_toEndOf="@+id/Desc" />

        <Button
            android:id="@+id/mDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Desc"
            android:layout_below="@+id/Desc"
            android:onClick="moreDetailsFromRes"
            android:text="more..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Desc"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="70dp">

            <ImageButton
                android:id="@+id/okBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_ok"
                android:tag="ok"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_cancel"
                android:tag="no"
                android:background="@null"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/mapOp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgResButton"
            android:layout_alignEnd="@+id/imgResButton"
            android:src="@android:drawable/ic_menu_mapmode" />


    </RelativeLayout>
</ScrollView>